<%- include header %>
        <div class="container">
            <div class="row">
                <% arts.forEach(function(art) { %>
                    <div class="col-xs-8 col-xs-offset-2">
                        <div class="article-box">
                            <a href="/detail/<%= art._id %>">
                                <h3 class="text-center"><%= art.attributes.title %></h3>
                            </a>
                            <p class="text-center">
                                <span class="label label-info"><%= art.attributes.tag %></span> | 
                                <span class="create-time">
                                    <span class="text-bold">时间:</span>
                                    <%= art.createdAt %>
                                </span>
                            </p>
                            <p><%= art.attributes.content %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </body>
</html>